<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/camera_margin_both_side"
        android:layout_marginLeft="0dip"
        android:layout_marginTop="@dimen/camera_margin_both_side" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/camera_take"
            style="@style/normal_bg_style"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:text="@string/Camera_takepic"
            android:textColor="@color/Blue"
            android:textSize="30sp" />

        <Button
            android:id="@+id/camera_btok"
            style="@style/success_bg_style"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:text="@string/Success"
            android:textSize="30sp" />

        <Button
            android:id="@+id/camera_btfailed"
            style="@style/fail_bg_style"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="@string/Failed"
            android:textSize="30sp" />
    </RelativeLayout>
</FrameLayout>
